# -------------------------
# API Sunucusu
# -------------------------
API_HOST=127.0.0.1
API_PORT=11000
FLASK_ENV=production

# -------------------------
# Chrome / WhatsApp
# -------------------------
CHROME_HEADLESS=false
BROWSER_ROOT_DIR=Browser
WHATSAPP_URL=https://web.whatsapp.com/
LOGIN_TIMEOUT_SECONDS=120

# -------------------------
# Kapasite / Ölçekleme
# -------------------------
TASKS_PER_PROFILE=10
SCALE_INTERVAL_SECONDS=5
PROFILE_START_DELAY_SECONDS=4

# -------------------------
# Veritabanı (örnek)
# -------------------------
DB_HOSTNAME=localhost
DB_NAME=wpbot
DB_USERNAME=root
DB_PASSWORD=Admin
DB_PORT=3306
DB_CHARSET=utf8mb4


# -------------------------
# Saat Dilimi
# -------------------------
APP_TIMEZONE=Europe/Istanbul
APP_TZ_OFFSET_HOURS=3

# -------------------------
# Logging
# -------------------------
LOG_DIR=logs
LOG_LEVEL=INFO

# -------------------------
# Başlangıç Profilleri
# -------------------------
INITIAL_PROFILES=1
# -------------------------
