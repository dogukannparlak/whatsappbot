
# -------------------------
# API Server
# -------------------------
API_HOST=127.0.0.1            # Usually 0.0.0.0 or internal host in containers
API_PORT=5000
FLASK_ENV=production          # production | development

# -------------------------
# Chrome / WhatsApp Automation
# -------------------------
CHROME_HEADLESS=false         # true = headless (no UI)
BROWSER_ROOT_DIR=Browser      # Where profile directories are stored
WHATSAPP_URL=https://web.whatsapp.com/
LOGIN_TIMEOUT_SECONDS=120

# -------------------------
# Capacity / Autoscaling
# -------------------------
TASKS_PER_PROFILE=10
SCALE_INTERVAL_SECONDS=5
PROFILE_START_DELAY_SECONDS=4

# -------------------------
# Database (PLACEHOLDER VALUES - CHANGE ALL)
# -------------------------
DB_HOSTNAME=YOUR_DB_HOST
DB_NAME=YOUR_DB_NAME
DB_USERNAME=YOUR_DB_USER
DB_PASSWORD=CHANGE_ME_SECURE_PASSWORD
DB_PORT=3306
DB_CHARSET=utf8mb4

# -------------------------
# Time Zone
# -------------------------
APP_TIMEZONE=Europe/Istanbul
APP_TZ_OFFSET_HOURS=3

# -------------------------
# Logging
# -------------------------
LOG_DIR=logs
LOG_LEVEL=INFO

# -------------------------
# Initial Profiles
# -------------------------
INITIAL_PROFILES=1

# -------------------------


